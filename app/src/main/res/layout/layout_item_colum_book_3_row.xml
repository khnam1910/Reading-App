<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#E9F6FF"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imgAvatarBook"
        android:layout_width="101dp"
        android:layout_height="152dp"
        android:padding="2dp"
        android:scaleType="centerCrop"
        android:background="@drawable/boder_radius"
        android:src="@drawable/sach19"
        android:layout_marginRight="10dp"
        app:shapeAppearanceOverlay="@style/boder_raius"
        />

    <LinearLayout
        android:layout_width="186dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvNameBook"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center_vertical"
            android:text="Lễ Tốt Nghiệp Sinh Tử"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNameAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tác Giả"
            android:textColor="#B6B2B2" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:backgroundTint="#E9F6FF"
        android:text="..."
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_gravity="center"
        android:textStyle="bold"
        />

</LinearLayout>